<h1>Basket</h1>

<div id="card">
{{#if courses.length}}
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Number</th>
        <th>ToDo</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>
          <button class="btn btn-small js-remove" data-id="{{_id}}">Delete</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <p><strong>Price: </strong> <span class="price">{{price}}</span></p>
{{else}}
  <p>Basket is empty</p>
{{/if}}
</div>