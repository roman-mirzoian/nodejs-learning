<h1>Edit course {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-from">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
    <label for="title">Course Name</label>
    <span class="helper-text" data-error="wrong name"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" required value="{{course.price}}">
    <label for="price">Course Price</label>
    <span class="helper-text" data-error="wrong price"></span>
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
    <label for="img">URL img</label>
    <span class="helper-text" data-error="wrong url"></span>
  </div>

  <input type="hidden" name="id" value="{{course._id}}">

  <button type="submit" class="btn btn-primary">Edit Course</button>
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{course._id}}">
  <button class="btn red">Delete course</button>
</form>
 